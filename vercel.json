{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://sunmount-app-builder.onrender.com/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}